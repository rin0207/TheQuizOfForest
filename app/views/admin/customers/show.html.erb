<div>
	<div>
		<p><%= @customer.name %>さんのマイページ</p>
		<div>
			Name<%= @customer.name %>
			Email<%= @customer.email %>
		</div>
		<div>
			<% @question.each do |question| %>
			    <div>
			    	<span>
			    		問題文
			    		<%= question.content %>
			    	</span>
			    	<span>
			    		<% question.choices.each do |choice| %>
			    		    <%= choice.sentence, class: "check" %>
			    		<% end %>
			    	</span>
			    	<span>
			    		<!-- このページでは解説を非表示しない -->
			    		<%= question.comment %>
			    	</span>
			    	<span>
			    		<%= link_to "編集する", edit_public_question_path %>
			    	</span>
			    </div>
			<% end %>
		</div>
	</div>
</div>