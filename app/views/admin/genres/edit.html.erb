<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<P>ジャンル編集ページ</P>
		<div class="row">
			<%= form_for(@genre, url: admin_genre_path) do |f| %>
			<div>
				<label>ジャンル</label>
			</div>
			<div class="col-xs-3">
				<%= f.text_field :name %>
			</div>
