<div>
	<div>
		<P>ジャンルページ</P>
		<div>
			<%= form_for(@genre, url: admin_genres_path) do |f| %>
			<diV>
				<label>ジャンル</label>
			</diV>
			<div>
				<%= f.text_field :name %>
			</div>
			<div>
				<%= f.submit '追加' %>
			</div>
			<% end %>
		</div>
		<div>
			<table>
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th>クイズ数</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td>
							<%= genre.name %>
						</td>
						<td></td>
						<td>
							<%= link_to "変更する", edit_genre_path(genre) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>