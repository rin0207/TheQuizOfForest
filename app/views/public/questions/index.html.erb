<div>
	<div>
		<P>新着クイズ一覧</P>
		<div>
			<% @question.each do |question| %>
			    <div>
			    	<span>
			    		問題文
			    		<%= question.content %>
			    	</span>
			    	<span>
			    		<% question.choices.each do |choice| %>
			    		    <%= choice.sentence, class: "check" %>
			    		<% end %>
			    	</span>
			    	<span class="comment", style="display:none"><!-- 解説は初期状態では非表示 -->
			    		<%= question.comment %>
			    	</span>
			    </div>
			<% end %>
		</div>
	</div>
</div>

<script>
    $(function () {
	    $('check').on('click', () =>{
		    $('comment').animate({width: 'show' }, 'slow');
		    //解答を選んだ時に、解説を表示
	    });
	});
</script>