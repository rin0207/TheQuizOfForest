<div>
	<div>
		<p><%= current_customer.name %>さんのマイページ</p>
		<div>
			Name<%= current_customer.name %>
			Email<%= current_customer.email %>
			<%= link_to "変更する", edit_registration_devise_path %>
		</div>
		<div>
			<% @question.each do |question| %>
			    <div>
			    	<span>
			    		問題文
			    		<%= question.content %>
			    	</span>
			    	<span>
			    		<% question.choices.each do |choice| %>
			    		    <%= choice.sentence, class: "check" %>
			    		<% end %>
			    	</span>
			    	<span>
			    		<!-- 自分で作成した問題は解説を非表示しない -->
			    		<%= question.comment %>
			    	</span>
			    	<span>
			    		<%= link_to "編集する", edit_public_question_path %>
			    	</span>
			    </div>
			<% end %>
		</div>
		<div>
			<%= link_to "新しいクイズを作る", new_public_question_path %>
		</div>
	</div>
</div>